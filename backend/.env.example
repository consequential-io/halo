# Agatha Backend Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# AI Provider Configuration
# =============================================================================

# AI provider to use: "gemini" or "openai"
AI_PROVIDER=gemini

# Gemini model (if using Gemini)
GEMINI_MODEL=gemini-2.0-flash

# OpenAI model (if using OpenAI)
OPENAI_MODEL=gpt-4-turbo

# Google API Key (required for Gemini)
# Can also be fetched from GCP Secret Manager
GOOGLE_API_KEY=

# OpenAI API Key (required for OpenAI)
OPENAI_API_KEY=

# =============================================================================
# Google Cloud Configuration
# =============================================================================

# GCP Project ID
GOOGLE_CLOUD_PROJECT=otb-dev-platform

# BigQuery dataset and tables
BQ_DATASET=master
BQ_TABLE_TL=northstar_master_combined_tl
BQ_TABLE_WH=northstar_master_combined_wh

# =============================================================================
# Meta (Facebook) OAuth Configuration
# =============================================================================

# Meta App credentials (from developers.facebook.com)
META_APP_ID=
META_APP_SECRET=

# OAuth redirect URI
META_REDIRECT_URI=http://localhost:8000/auth/facebook/callback

# =============================================================================
# Server Configuration
# =============================================================================

# Server host and port
HOST=0.0.0.0
PORT=8000

# Debug mode (set to false in production)
DEBUG=false

# =============================================================================
# Observability
# =============================================================================

# Project name for tracing
FI_PROJECT_NAME=agatha
